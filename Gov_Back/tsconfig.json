{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",

    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "types": ["node", "jest"],
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "tests",
    "scripts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
